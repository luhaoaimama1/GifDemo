<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gif.zone.com.gifdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <pl.droidsonroids.gif.GifTextView
            android:id="@+id/clickStop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableBottom="@drawable/a"
            android:text="设置后自动播放  点击可以stop/play"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:textColor="#6493ff" />

        <pl.droidsonroids.gif.GifTextView
            android:id="@+id/videoB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="点击进入video 控制Gif模式"
            android:textSize="30dp"
            android:onClick="onClick"
            android:drawableBottom="@drawable/b"
            android:textColor="#ffaeae" />

        <pl.droidsonroids.gif.GifTextView
            android:id="@+id/muliGifC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableBottom="@drawable/b"
            android:text="点击后进入MuliGifC"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:textColor="#6493ff" />

    </LinearLayout>
</ScrollView>